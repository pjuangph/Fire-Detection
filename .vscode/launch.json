{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "MLP Grid Search",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/train_mlp.py",
            "args": ["--config", "configs/grid_search_mlp.yaml"],
            "console": "integratedTerminal"
        },
        {
            "name": "MLP Single Train (BCE)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/train_mlp.py",
            "args": ["--loss", "bce",
                    "--layers", "64", "64", "64", "32"],
            "console": "integratedTerminal"
        },
        {
            "name": "TabPFN Classification Grid Search",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/train_tabpfn_classification.py",
            "args": ["--config", "configs/grid_search_tabpfn_classification.yaml"],
            "console": "integratedTerminal"
        },
        {
            "name": "TabPFN Regression Grid Search",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/train_tabpfn_regression.py",
            "args": ["--config", "configs/grid_search_tabpfn_regression.yaml"],
            "console": "integratedTerminal"
        },
        {
            "name": "Compare Detectors (All Models)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/compare_fire_detectors.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Realtime MLP",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/realtime_mlp.py",
            "args": ["--config", "configs/best_model.yaml"],
            "console": "integratedTerminal"
        },
        {
            "name": "Realtime TabPFN",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/realtime_tabpfn.py",
            "args": ["--config", "configs/best_model.yaml"],
            "console": "integratedTerminal"
        },
        {
            "name": "Realtime Simple (Threshold)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/realtime_mlp.py",
            "console": "integratedTerminal"
        }
    ]
}
